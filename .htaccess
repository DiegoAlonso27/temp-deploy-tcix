RewriteEngine On
RewriteBase /
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule . /index.html [L]
# Security Headers
<IfModule mod_headers.c>
	Header set Age "216000
	Header set X-XSS-Protection "1; mode=block"
	Header set X-Frame-Options "SAMEORIGIN"
	Header set X-Content-Type-Options "nosniff"
	#Header set X-Permitted-Cross-Domain-Policies "none"
	Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains;"
	Header set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data:; connect-src 'self'; font-src 'self' https://use.typekit.net data:;  frame-src 'self'; img-src * 'self' data:; media-src 'self'; object-src 'self'; script-src 'self' 'unsafe-inline' 'report-sample' https://use.typekit.net/kal3ksx.js; style-src 'self' https://use.typekit.net/kal3ksx.css https://p.typekit.net 'unsafe-eval' 'unsafe-inline'; style-src-elem 'self' https://use.typekit.net/kal3ksx.css https://p.typekit.net 'unsafe-eval' 'unsafe-inline';"
	Header set Referrer-Policy "same-origin"
	Header set Permissions-Policy "geolocation=(self)"
 	Header always unset X-Powered-By
 	Header always unset Server
  Header unset Server
 	Header unset X-Powered-By
 	Header append Vary "Accept-Encoding, User-Agent, Referer"	
</IfModule>